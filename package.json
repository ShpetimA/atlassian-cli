{
  "name": "atlassian-cli-tools",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Atlassian CLI tools (Bitbucket, Jira, Confluence)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:bb": "bun run --cwd packages/bitbucket-cli build",
    "build:jira": "bun run --cwd packages/jira-cli build"
  }
}
